{
  "compilerOptions": {
    "target": "ES2020",
    // Use CommonJS modules so Node can run them easily without ESM issues
    "module": "commonjs",
    "outDir": "dist",

    // Allows 'import' syntax even in a CommonJS project
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
  }
}